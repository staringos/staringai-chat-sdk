{
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "NODE_ENV=development tsdx watch",
    "build": "tsdx build --format umd",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "dev": "http-server ./dist & NODE_ENV=development tsdx watch & parcel example/index.html --open"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "staringchat",
  "author": "Joe",
  "module": "dist/staringchat.esm.js",
  "size-limit": [
    {
      "path": "dist/staringchat.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/staringchat.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "husky": "^8.0.3",
    "less": "^4.1.3",
    "parcel": "^2.8.3",
    "postcss": "^8.4.23",
    "postcss-modules": "^6.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^8.2.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4",
    "rollup-plugin-dotenv": "^0.4.1"
  },
  "dependencies": {
    
  }
}
